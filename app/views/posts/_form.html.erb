
<%= form_for @post do |form| %>
  <%= form.text_field :title, placeholder: 'title' %>
  <%= form.number_field :likes %>
  <%= form.collection_select :blogger_id, @bloggers, :id, :name %>
  <%= form.collection_select :destination_id, @destinations, :id, :name %>
  <%= form.label 'Content' %>
  <%= form.text_area :content %>
  <%= form.submit %>
<% end %>


