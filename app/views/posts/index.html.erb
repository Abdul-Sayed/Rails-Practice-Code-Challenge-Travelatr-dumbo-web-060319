
<h3><%= link_to 'Create new Post', new_post_path %></h3>


<h1>List of Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <%= link_to "Title: #{post.title}", post_path(post) %> <br>
      <%= "Number of Likes: #{post.likes}" %> <br>
      <%= "Content: #{post.content}" %> <br>
    </li> <br>
  <% end %>
</ul>
