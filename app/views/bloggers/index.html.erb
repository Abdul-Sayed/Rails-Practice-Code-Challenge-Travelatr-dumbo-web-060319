
<h3><%= link_to 'Create new Blogger', new_blogger_path %></h3>

<h1>List of Bloggers</h1>

<ul>
  <% @bloggers.each do |blogger| %>
    <br>
    <li>
      <%= link_to blogger.name, blogger_path(blogger) %> <br>
      <%= "Age: #{blogger.age}" %> <br>
      <%= "Bio: #{blogger.bio}" %> <br>
    </li>
  <% end %>
</ul>


